<p id="notice"><%= notice %></p>

<h1>Latest Posts</h1>

<div class="ui accordion">
  <% @posts.each do |post| %>
  <div class="title ui header">
    <i class="dropdown icon"></i>
    <%= post.title %>
  </div>
  <div class="content ui segment">
    <div class="transition hidden">
      <div class="ui red ribbon label"><%= distance_of_time_in_words_to_now(post.created_at) %> ago by <%= post.user.username %></div>
      <br>
      <br>
      <div class="content"><%= simple_format(post.content) %></div>

      <div class="segment comments">
        <% if post.comments.any? %>
          <% post.comments.each do |comment| %>
            <%= comment.comment %>
          <% end %>
        <% else %>
          No comments yet.
        <% end %>

        <h3 class="ui header">Add a comment</h3>

        <%= form_for [post, @comment], html: {class: "ui form"} do |f| %>
          <div class="field">
            <%= f.label :comment %><br>
            <%= f.text_area :comment %>
          </div>
          <%= f.hidden_field :post_id, options = {value:post.id}%>
          <%= f.submit %>
        <% end %>
      </div>
    </div>
  </div>
  <% end %>
</div>

<br>
<% if !current_user.nil? %>
  <%= link_to 'New Post', new_post_path %>
<% end %>
